{
  "name": "collection-explorer-for-zotero",
  "type": "module",
  "version": "1.0.1",
  "description": "Show subcollections as folder-like rows at the top of the items list, for Explorer-style navigation.",
  "config": {
    "addonName": "Collection Explorer for Zotero",
    "addonID": "collection-explorer@thiago",
    "addonRef": "CollectionExplorer",
    "addonInstance": "CollectionExplorer",
    "prefsPrefix": "extensions.zotero.CollectionExplorer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagoelbert/collection-explorer-for-zotero.git"
  },
  "author": "Thiago Elbert",
  "bugs": {
    "url": "https://github.com/thiagoelbert/zotero-file-explorer/issues"
  },
  "homepage": "https://github.com/thiagoelbert/collection-explorer-for-zotero#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.13"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "zotero-plugin-scaffold": "^0.8.2",
    "zotero-types": "^4.1.0-beta.4"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
